{
    "python.pythonPath": "/usr/bin/python3",
    "python.formatting.provider": "black",
    "[restructuredtext]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wrappingIndent": "same",
        "editor.wordWrapColumn": 80
    },
    "clang-tidy.compilerArgs": [
        "-DNDEBUG"
    ],
    "clang-tidy.buildPath": "../build",
    "clang-tidy.blacklist": [
        ".*.t.cpp" // Test framework macros should not be checked
    ],
    "clang-tidy.checks": [
        "readability-*",
        "modernize-*",
        "portability-*",
        "misc-*",
        "cppcoreguidelines-*",
        "-*-reinterpret-cast",
        "-modernize-use-trailing-return-type",
        "-*-uppercase-literal-suffix",
        "-*-named-parameter",
        "-*-magic-numbers",
        "-readability-braces-around-statements"
    ],
    "python.testing.unittestArgs": [
        "-s",
        "./regenerator",
        "-p",
        "test_*.py"
    ],
    "python.testing.unittestEnabled": true,
    "files.associations": {
        "*.gpr": "ada",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "initializer_list": "cpp",
        "iosfwd": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "new": "cpp",
        "ostream": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "typeinfo": "cpp"
    }
}