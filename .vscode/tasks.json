{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake ${workspaceFolder} ${input:cmake-config} -G Ninja -B ${workspaceFolder}/../build",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/../build",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/../build"
            },
            "command": "ctest -j4 --output-on-failure",
            "group": "test"
        },
        {
            "label": "build-and-test",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "test"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "cmake-config",
            "description": "CMake configuration options",
            "type": "promptString",
            "default": ""
        }
    ]
}